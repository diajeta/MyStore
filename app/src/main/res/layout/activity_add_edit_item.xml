<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditCategory"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintVertical_bias="0.19999999">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/addNewItemInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add New Item"
                android:textColor="@color/black"
                android:inputType="textCapWords"
                android:paddingEnd="35dp"
                android:singleLine="true"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/addNewItemQua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add Quantity"
                android:textColor="@color/black"
                android:inputType="number"
                android:paddingEnd="35dp"
                android:singleLine="true"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/addNewItemCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add Cost Price"
                android:textColor="@color/black"
                android:inputType="number"
                android:paddingEnd="35dp"
                android:singleLine="true"
                android:layout_margin="10dp"/>
            <EditText
                android:id="@+id/addNewItemSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add Selling Price"
                android:textColor="@color/black"
                android:inputType="number"
                android:paddingEnd="35dp"
                android:singleLine="true"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/submitItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:layout_marginHorizontal="100dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>